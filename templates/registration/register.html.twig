{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% include "_partials/_nav.html.twig" %}
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>

                {{ form_start(registrationForm) }}
                    <fieldset class="mb-3">
                        <legend>My identy</legend>
                        {{ form_row(registrationForm.last_name) }}
                        {{ form_row(registrationForm.first_name) }}
                        {{ form_row(registrationForm.email) }}
                    </fieldset>

                    <fieldset class="mb-3">
                        <legend>My contact information</legend>
                        {{ form_row(registrationForm.adress) }}
                        {{ form_row(registrationForm.city) }}
                    </fieldset>
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.RGPDConsent) }}

                   

                    <button type="submit" class="btn btn-primary btn-lg my-3">Register</button>
                    <a href="{{ path('app_login') }}" class="btn btn-secondary">Log in</a>
                {{ form_end(registrationForm) }}            
            </div>
        </div>
    </section>

{% endblock %}

